import discord
from discord.ext import commands

bot = commands.Bot(command_prefix='!')

@bot.event
async def on_ready():
    print(f'Logged in as {bot.user.name} ({bot.user.id})')
    print('------')

@bot.command()
async def hello(ctx):
    await ctx.send('Hello, I am your Discord bot!')

bot.run('BOT_TOKEN')
